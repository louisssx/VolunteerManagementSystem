@model VolunteerManagementSystem.Models.IncidentReport

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow" style="border-radius: 18px;">
                <div class="card-header text-white" style="background: linear-gradient(90deg, #5b86e5 0%, #36d1c4 100%); border-top-left-radius: 18px; border-top-right-radius: 18px;">
                    <h3 class="mb-0" style="font-weight: 700; letter-spacing: 1px;">Incident Report Details</h3>
                </div>
                <div class="card-body p-4" style="background: #f8fafc; border-bottom-left-radius: 18px; border-bottom-right-radius: 18px;">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>
                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                        <dt class="col-sm-4">Date Reported</dt>
                        <dd class="col-sm-8">@Model.DateReported.ToString("MM/dd/yyyy hh:mm tt")</dd>
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.Status == "Pending") {
                                <span class="badge bg-warning text-dark">Pending</span>
                            } else if (Model.Status == "Not Started") {
                                <span class="badge bg-secondary">Not Started</span>
                            } else if (Model.Status == "Done") {
                                <span class="badge bg-success">Done</span>
                            } else {
                                <span class="badge bg-light text-dark">@Model.Status</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-white d-flex justify-content-end gap-2" style="border-bottom-left-radius: 18px; border-bottom-right-radius: 18px;">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gradient-primary" style="background: linear-gradient(135deg, #36d1c4 0%, #5b86e5 100%); color: white; font-weight: 600; border: none;">
                        <i class="fa fa-pen-to-square me-1"></i>Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
