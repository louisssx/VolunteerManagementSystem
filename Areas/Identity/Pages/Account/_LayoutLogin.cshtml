@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResponSync</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
        }
        body {
            min-height: 100vh;
            height: 100%;
            margin: 0;
            background: linear-gradient(120deg, #1de9b6 0%, #1dc8e9 100%);
            font-family: 'Segoe UI', 'Inter', Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            background: rgba(255,255,255,0.92);
            border-radius: 24px;
            box-shadow: 0 4px 32px rgba(54,209,196,0.10);
            padding: 2.5rem 2.5rem 2rem 2.5rem;
            max-width: 400px;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .login-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
        }
        .login-logo img {
            max-width: 60px;
            margin-right: 14px;
        }
        .login-logo span {
            font-size: 2rem;
            font-weight: 700;
            color: #222;
            letter-spacing: 1px;
        }
        .login-card h2, .login-card p, .login-card label, .login-card a {
            color: #222 !important;
        }
        .login-card .form-control {
            color: #222;
        }
        .login-card .btn {
            color: #222;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="login-logo">
            <img src="/img/darklogo.png" alt="ResponSync Logo" />
            <span>ResponSync</span>
        </div>
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html> 