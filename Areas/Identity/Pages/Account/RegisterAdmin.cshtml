@page
@model RegisterAdminModel
@{
    Layout = "~/Views/Shared/_LayoutRegister.cshtml"; <!-- Uses custom layout for registration -->
    ViewData["Title"] = "Admin Registration"; <!-- Sets the page title -->
}

<!-- Centered registration card -->
<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div style="min-width: 350px; max-width: 400px; width: 100%; background: #fff; border-radius: 24px; box-shadow: 0 2px 16px rgba(54,209,196,0.10); padding: 2.5rem 2rem;">
        <h2 class="text-center mb-2" style="font-weight:700; color:#444; font-size:2.2rem;">Admin Registration</h2>
        <p class="text-center mb-4" style="color:#444; font-size:1.1rem;">Sign up as an admin</p>
        <form method="post">

            <!-- Email input -->
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label" style="font-weight:500; letter-spacing:1px;">EMAIL</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter email" style="border-radius: 2rem; padding-left:1.2rem;" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password input -->
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label" style="font-weight:500; letter-spacing:1px;">PASSWORD</label>
                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Enter password" style="border-radius: 2rem; padding-left:1.2rem;" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm password input -->
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label" style="font-weight:500; letter-spacing:1px;">CONFIRM PASSWORD</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Confirm password" style="border-radius: 2rem; padding-left:1.2rem;" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Admin code input -->
            <div class="mb-3">
                <label asp-for="Input.AdminCode" class="form-label" style="font-weight:500; letter-spacing:1px;">ADMIN REGISTRATION CODE</label>
                <input asp-for="Input.AdminCode" class="form-control" placeholder="Enter admin code" style="border-radius: 2rem; padding-left:1.2rem;" />
                <span asp-validation-for="Input.AdminCode" class="text-danger"></span>
            </div>

            <!-- Register button -->
            <button type="submit" class="w-100 btn btn-lg" style="background: linear-gradient(90deg,#36d1c4 0%, #5b86e5 100%); color:#222; font-weight:700; border-radius:2rem; box-shadow:0 2px 8px rgba(54,209,196,0.10);">Register as Admin</button>
            <div class="mt-4 text-center" style="font-size:0.95rem; color:#888;">

                <!-- Back to login link -->
                <a href="/Identity/Account/Login" style="color: black; text-decoration:none; font-weight:600;">Back to Login</a>
            </div>
        </form>
    </div>
</div>
@if (TempData["ShowConfirmationModal"] != null && TempData["ConfirmationLink"] != null)
{
    <!-- Modal for email confirmation -->
    <div class="modal fade show" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-modal="true" style="display: block; background: rgba(0,0,0,0.4);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="confirmationModalLabel">Confirm Your Email</h5>
                </div>
                <div class="modal-body text-center">
                    <i class="fa fa-envelope fa-3x mb-3 text-success"></i>
                    <p>A confirmation email has been sent. Click the link below to confirm your email:</p>
                    <a href="@TempData["ConfirmationLink"]" class="btn btn-success mt-2">Confirm Email</a>
                </div>
            </div>
        </div>
    </div>
    <script>

        // Prevent background scrolling when modal is open
        document.body.classList.add('modal-open');
    </script>
}
@section Scripts {

    <!-- Validation scripts partial -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 