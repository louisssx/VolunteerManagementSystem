@page
@{
    ViewData["Title"] = "Forgot Password";
}

<!-- Page header and description -->
<h2 class="text-center mb-2" style="font-weight:700; color:#444; font-size:2.2rem;">Forgot Password</h2>
<p class="text-center mb-4" style="color:#444; font-size:1.1rem;">Enter your email address and we'll send you a link to reset your password.</p>
<form method="post">

    <!-- Validation summary for errors -->
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
    <div class="mb-4">

        <!-- Email input field -->
        <label for="Input_Email" class="form-label" style="font-weight:500; letter-spacing:1px;">EMAIL</label>
        <input id="Input_Email" name="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="your@email.com" style="border-radius: 2rem; padding-left:1.2rem;" />
    </div>

    <!-- Submit button to send reset link -->
    <button type="submit" class="w-100 btn btn-lg" style="background: linear-gradient(90deg,#36d1c4 0%, #5b86e5 100%); color:#222; font-weight:700; border-radius:2rem; box-shadow:0 2px 8px rgba(54,209,196,0.10);">Send Reset Link</button>
    <div class="mt-4 text-center" style="font-size:0.95rem; color:#888;">

        <!-- Back to login link -->
        <a asp-page="./Login" style="color:#5b86e5; text-decoration:none;">Back to Login</a>
    </div>
</form>

@section Scripts {
    <!-- Validation scripts partial -->
    <partial name="_ValidationScriptsPartial" />
} 