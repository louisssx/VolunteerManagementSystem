@{
    ViewData["Title"] = "Settings";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow mb-4" style="border-radius: 20px;">
                <div class="card-header text-white" style="background: linear-gradient(90deg, #36d1c4 0%, #5b86e5 100%); border-top-left-radius: 20px; border-top-right-radius: 20px;">
                    <h3 class="mb-0" style="font-weight: 700; letter-spacing: 1px;"><i class="fa fa-gear me-2"></i>Settings</h3>
                </div>
                <div class="card-body" style="background: #f8fafc; border-bottom-left-radius: 20px; border-bottom-right-radius: 20px;">
                    <div class="row g-4 justify-content-center">
                        <div class="col-12 col-md-4">
                            <div class="card h-100 settings-card text-center animate-shortcut" style="border-radius: 16px; border: 2px solid #5b86e5; transition: box-shadow 0.2s, transform 0.2s;">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                                    <i class="fa fa-user-circle mb-2" style="font-size:2.2rem; color: #5b86e5;"></i>
                                    <h5 class="mt-2" style="color: #5b86e5; font-weight: 600;">Profile</h5>
                                    <p class="text-muted mb-3">Update your profile information.</p>
                                    <button class="btn btn-outline-primary btn-sm" style="border-radius: 8px;" disabled>Coming Soon</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="card h-100 settings-card text-center animate-shortcut" style="border-radius: 16px; border: 2px solid #36d1c4; transition: box-shadow 0.2s, transform 0.2s;">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                                    <i class="fa fa-key mb-2" style="font-size:2.2rem; color: #36d1c4;"></i>
                                    <h5 class="mt-2" style="color: #36d1c4; font-weight: 600;">Password</h5>
                                    <p class="text-muted mb-3">Change your account password.</p>
                                    <button class="btn btn-outline-info btn-sm" style="border-radius: 8px; color: #36d1c4; border-color: #36d1c4;" disabled>Coming Soon</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="card h-100 settings-card text-center animate-shortcut" style="border-radius: 16px; border: 2px solid #ffc107; transition: box-shadow 0.2s, transform 0.2s;">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                                    <i class="fa fa-bell mb-2" style="font-size:2.2rem; color: #ffc107;"></i>
                                    <h5 class="mt-2" style="color: #ffc107; font-weight: 600;">Notifications</h5>
                                    <p class="text-muted mb-3">Manage your notification preferences.</p>
                                    <button class="btn btn-outline-warning btn-sm" style="border-radius: 8px; color: #ffc107; border-color: #ffc107;" disabled>Coming Soon</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .settings-card:hover {
        box-shadow: 0 4px 16px rgba(54,209,196,0.18) !important;
        transform: translateY(-2px) scale(1.04);
        text-decoration: none;
    }
</style> 
</style> 
</div> 
</div> 
</div> 
</div> 