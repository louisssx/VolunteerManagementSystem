@model VolunteerManagementSystem.Models.IncidentReport

@{
    // Sets the page title to "Edit" for display in the browser/tab
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">

            <!-- Card container for the edit form -->
            <div class="card shadow" style="border-radius: 18px;">

                <!-- Header with styled gradient background -->
                <div class="card-header text-white" style="background: linear-gradient(90deg, #5b86e5 0%, #36d1c4 100%); border-top-left-radius: 18px; border-top-right-radius: 18px;">
                    <h3 class="mb-0" style="font-weight: 700; letter-spacing: 1px;">Edit Incident Report</h3>
                </div>

                <!-- Body containing the form fields -->
                <div class="card-body p-4" style="background: #f8fafc; border-bottom-left-radius: 18px; border-bottom-right-radius: 18px;">
                    <form asp-action="Edit">

                        <!-- Displays model validation summary -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Hidden input for IncidentReport ID (needed to identify the record) -->
                        <input type="hidden" asp-for="Id" />

                        <!-- Title input field -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control form-control-lg rounded-3" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Type dropdown field -->
                        <div class="mb-3">
                            <label asp-for="Type" class="form-label fw-semibold"></label>
                            <select asp-for="Type" class="form-select form-select-lg rounded-3">
                                <option value="">Select Type</option>
                                <option value="Medical">Medical</option>
                                <option value="Logistics">Logistics</option>
                                <option value="Environmental">Environmental</option>
                                <option value="Community Support">Community Support</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <!-- Description textarea field -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control form-control-lg rounded-3" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- DateReported input field -->
                        <div class="mb-3">
                            <label asp-for="DateReported" class="form-label fw-semibold"></label>
                            <input asp-for="DateReported" class="form-control form-control-lg rounded-3" />
                            <span asp-validation-for="DateReported" class="text-danger"></span>
                        </div>

                        <!-- Status dropdown field -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-semibold"></label>
                            <select asp-for="Status" class="form-select form-select-lg rounded-3">
                                <option value="Pending">Pending</option>
                                <option value="Not Started">Not Started</option>
                                <option value="Done">Done</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Form action buttons: Save and Back to List -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-gradient-primary px-4 py-2" style="background: linear-gradient(135deg, #36d1c4 0%, #5b86e5 100%); color: white; font-weight: 600; border: none; border-radius: 8px; font-size: 1.1rem;">Save</button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2" style="border-radius: 8px; font-size: 1.1rem;">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        // Includes client-side validation scripts for the form
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
