<!-- Confirmation page for deleting a volunteer -->
@model VolunteerManagementSystem.Models.Volunteer

@{
    ViewData["Title"] = "Delete Volunteer";
}

<!-- Main container with centered content -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">

            <!-- Delete confirmation card with rounded corners -->
            <div class="card shadow" style="border-radius: 18px;">

                <!-- Card header with danger gradient background -->
                <div class="card-header bg-danger text-white text-center" style="background: linear-gradient(90deg, #ff5858 0%, #f09819 100%); border-top-left-radius: 18px; border-top-right-radius: 18px;">
                    <h3 class="mb-0" style="font-weight: 700; letter-spacing: 1px;"><i class="fa fa-exclamation-triangle me-2"></i>Delete Volunteer</h3>
                </div>

                <!-- Card body with confirmation content -->
                <div class="card-body p-4" style="background: #f8fafc; border-bottom-left-radius: 18px; border-bottom-right-radius: 18px;">

                    <!-- Warning alert message -->
                    <div class="alert alert-danger text-center mb-4" style="font-size: 1.1rem;">
                        <i class="fa fa-exclamation-circle me-2"></i>
                        Are you sure you want to <strong>delete</strong> this volunteer?
                    </div>

                    <!-- Volunteer details display -->
                    <dl class="row mb-4">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.firstName @Model.middleName @Model.lastName</dd>
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.email</dd>
                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.volunteerType</dd>
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                    </dl>

                    <!-- Delete confirmation form -->
                    <form asp-action="Delete">

                        <!-- Hidden field for volunteer ID -->
                        <input type="hidden" asp-for="Id" />

                        <!-- Action buttons -->
                        <button type="submit" class="btn btn-danger me-2" style="font-weight: 600; border-radius: 8px;">
                            <i class="fa fa-trash me-1"></i>Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary" style="font-weight: 600; border-radius: 8px;">
                            <i class="fa fa-arrow-left me-1"></i>Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
